<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="@drawable/zhucetu">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tv_Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="设置昵称、账号与密码"
            android:layout_below="@+id/btn_Back"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_marginTop="20dip"/>

        <TextView
            android:id="@+id/tv_Username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Warning2"
            android:layout_marginTop="20dip"
            android:text="昵称"
            android:textColor="#FF0000"
            android:textSize="25dp"
            />

        <EditText
            android:id="@+id/et_Username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_Username2"
            android:layout_alignBottom="@+id/tv_Username2"
            android:layout_toRightOf="@+id/tv_Username2"
            android:ems="10"
            android:maxLength="8"
            android:singleLine="true"
            android:maxLines="20"
            />

        <TextView
            android:id="@+id/tv_Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Username2"
            android:layout_alignLeft="@+id/tv_Username2"
            android:layout_marginTop="19dp"
            android:text="账号"
            android:textColor="#FF0000"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_Account"
            android:layout_alignBottom="@+id/tv_Account"
            android:layout_toRightOf="@+id/tv_Account"
            android:maxLength="8"
            android:singleLine="true"
            android:ems="10"
            android:maxLines="20" />

        <TextView
            android:id="@+id/tv_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Account"
            android:layout_alignLeft="@+id/tv_Username2"
            android:layout_marginTop="19dp"
            android:text="密码"
            android:textColor="#FF0000"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_Password"
            android:layout_alignBottom="@+id/tv_Password"
            android:layout_toRightOf="@+id/tv_Password"
            android:maxLength="16"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLines="20"
            android:singleLine="true"/>

        <Button
            android:id="@+id/btn_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="#FF0000"
            android:background="@drawable/btn1"
            android:text="返回" />

        <Button
            android:id="@+id/btn_Register2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_Password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:background="@drawable/btn_2"
            android:textSize="25dp"
            android:textColor="#FF0000"
            android:text="注册普通账号" />

        <TextView
            android:id="@+id/tv_Warning1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号由1-8位数字组成"
            android:textColor="#FF0000"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_below="@+id/tv_Title2"/>
        <CheckBox
            android:id="@+id/cb_password2"
            android:layout_toRightOf="@+id/et_Password"
            android:layout_above="@+id/btn_Register2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_Warning2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码由8-16位数字、字母或符号组成"
            android:textColor="#FF0000"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_below="@+id/tv_Warning1"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>