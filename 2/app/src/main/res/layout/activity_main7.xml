<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main7Activity"
    android:background="@drawable/tp5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_BAF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="返回"
            android:textColor="#FF0000"
            android:background="@drawable/btn1"/>

        <TextView
            android:id="@+id/tv_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   图片        名称      价格(元）    "
            android:textColor="#FF0000"
            android:textStyle="italic"
            android:layout_below="@+id/btn_BAF"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/tv_alert"
            android:textColor="#FF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btn_AddFOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn1"
            android:textColor="#FF0000"
            android:text="添加" />

        <Button
            android:id="@+id/btn_ShanchuFOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_AddFOOD"
            android:text="删除"
            android:textColor="#FF0000"
            android:background="@drawable/btn1"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/btn_GenxinFOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn1"
            android:textColor="#FF0000"
            android:text="修改" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_7">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_ts7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:textSize="25sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>